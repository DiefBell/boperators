{
	"name": "boperators-monorepo",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/DiefBell/boperators"
	},
	"workspaces": [
		"package",
		"plugins/*",
		"cli"
	],
	"scripts": {
		"build:boperators": "bun run --filter boperators build",
		"build:cli": "bun run --filter @boperators/cli build",
		"build:ts-server-plugin": "bun run --filter @boperators/plugin-ts-language-server build",
		"build:bun-plugin": "bun run --filter @boperators/plugin-bun build",
		"build": "bun run build:boperators && bun run --filter '*' build",
		"prepare": "husky",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,md}": [
			"bun run check:write --no-errors-on-unmatched",
			"git add"
		]
	}
}
