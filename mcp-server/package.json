{
	"name": "@boperators/mcp-server",
	"version": "0.1.0",
	"license": "MIT",
	"description": "MCP server for boperators - gives AI assistants access to operator overload information.",
	"repository": {
		"type": "git",
		"url": "https://github.com/DiefBell/boperators",
		"directory": "mcp-server"
	},
	"homepage": "https://github.com/DiefBell/boperators/tree/main/mcp-server",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"boperators-mcp": "./dist/index.js"
	},
	"keywords": [
		"boperators",
		"typescript",
		"operator",
		"overload",
		"operator-overloading",
		"mcp",
		"model-context-protocol",
		"ai",
		"claude"
	],
	"scripts": {
		"build": "bun build src/index.ts --target node --outdir dist --format esm",
		"watch": "bun build src/index.ts --target node --outdir dist --format esm --watch",
		"prepublish": "bun run build"
	},
	"files": [
		"package.json",
		"README.md",
		"license.txt",
		"dist"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.1",
		"zod": "^3.25.0"
	},
	"peerDependencies": {
		"boperators": "0.1.0",
		"typescript": ">=5.0.0 <5.10.0"
	}
}
